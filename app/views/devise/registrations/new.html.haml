.user-single-container
  .user-single-header
    %h1
      = image_tag 'fmarket_logo_red.svg',class:"logo"
  .user-single-main
    .user-single-main__content
      %h2.user-single-main__content__section
        新規会員登録
      .user-single-form-content
        .user-single-forms
          .user-form-group
            %button.mail-btn
              %i.far.fa-envelope
              = link_to 'メールアドレスで登録する', step1_signup_index_path
            %button.facebook-btn
              %i.fab.fa-facebook-square
              = link_to 'Facebookで登録する', user_facebook_omniauth_authorize_path, method: :post, class:"facebook-signin"
            %button.google-btn
              %i.fab.fa-google
              = link_to 'Googleで登録する', user_google_oauth2_omniauth_authorize_path, method: :post, class:"google-signin"
  .login-footer
    .login-footer__nav
      %ul.login-footer__nav__messages
        %li.login-footer__nav__messages__m プライバシーポリシー
        %li.login-footer__nav__messages__m メルカリ利用規約
        %li.login-footer__nav__messages__m 特定商取引に関する表記
    .login-footer__logo
      = image_tag 'logo_gray.svg',class:"flogo"
    %p.login-footer__copy ©Mercari,Inc.

