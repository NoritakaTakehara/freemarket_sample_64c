        .iden__form-group
          %label{for: "city"} 市区町村
          %span.form-arbitrary 任意
          %input.iden__input-default{name: "city", placeholder: "例）大阪市中央区", type: "text", value: ""}/
        .iden__form-group
          %label{for:    "address1_label"} 番地
          %span.form-arbitrary 任意
          %input.iden__input-default{name: "address1", placeholder: "例）難波5丁目1-60", type: "text", value: ""}/
        .iden__form-group
          %label{for:    "address2_label"} 建物名
          %span.form-arbitrary 任意
